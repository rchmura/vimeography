<style>
  @keyframes pulse {
    0% {
      transform: scale(1, 1);
    }
    50% {
      opacity: 0.3;
    }
    100% {
      transform: scale(1.25);
      opacity: 0;
    }
  }

  .vimeography-welcome p {
    font-size: 1.2rem;
    color: #1f1e2f;
    margin: 0 0 1rem;
  }

  input[type="text"],
  input[type="email"] {
    padding: 1rem;
    width: 100%;
  }

  input[type="submit"],
  .vimeography-button {
    padding: 0.5rem 1rem;
    background-color: #1fbb91;
    color: #fff;
    font-size: 1rem;
    border-radius: 4px;
    box-shadow: 0 2px 0px #15a57e;
    -webkit-transition: background 250ms ease;
    -moz-transition: background 250ms ease;
    -ms-transition: background 250ms ease;
    -o-transition: background 250ms ease;
    transition: background 250ms ease;
  }

  .vimeography-button {
    display: block;
  }

  .vimeography-button:hover {
    color: #fff;
    text-decoration: none;
  }

  .vimeography-input-container {
    display: inline-block;
    position: relative;
  }

  .vimeography-input-container:after {
    animation: pulse 1.2s ease infinite;
    background-color: #1fbb91;
    content: "";
    width: 100%;
    height: 100%;
    display: block;
    position: absolute;
    top: 0;
    border-radius: 4px;
    z-index: -1;
  }

  input[type="submit"]:hover,
  .vimeography-button:hover {
    background-color: #08d09a;
  }
</style>

